<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Interview Coach AI</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script crossorigin src="https://unpkg.com/react@18/umd/react.production.min.js"></script>
    <script crossorigin src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"></script>
    <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>
    <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.min.js"></script>
</head>
<body>
    <div id="root"></div>
    <script type="text/babel">
import React, { useState, useEffect } from 'react';
const { ChevronDown, Sparkles, Target, Award, Send, RotateCcw, Lock } = window.lucide;

export default function InterviewCoach() {
  const [jobRole, setJobRole] = useState('');
  const [experienceLevel, setExperienceLevel] = useState('Junior');
  const [questions, setQuestions] = useState([]);
  const [loading, setLoading] = useState(false);
  const [expandedCards, setExpandedCards] = useState({});
  const [activeTab, setActiveTab] = useState(null);

  const jobRoleSuggestions = [
    'Software Engineer',
    'Data Analyst',
    'ML Engineer',
    'Product Manager',
    'UX Designer',
    'DevOps Engineer',
    'Frontend Developer',
    'Backend Developer'
  ];

  const toggleCard = (index) => {
    setExpandedCards(prev => ({
      ...prev,
      [index]: !prev[index]
    }));
  };

  const generateQuestions = async () => {
    if (!jobRole.trim()) {
      alert('Please enter or select a job role');
      return;
    }

    setLoading(true);
    try {
      const response = await fetch('https://api.anthropic.com/v1/messages', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          model: 'claude-sonnet-4-20250929',
          max_tokens: 2000,
          messages: [
            {
              role: 'user',
              content: `Generate 6 challenging and relevant interview questions for a ${experienceLevel} level candidate applying for a ${jobRole} position. 

For EACH question, provide in this exact JSON format:
{
  "question": "The interview question here",
  "sampleAnswer": "A comprehensive 2-3 sentence sample answer",
  "keyPoints": ["Point 1", "Point 2", "Point 3", "Point 4"],
  "tips": "1-2 actionable tips on how to approach this answer",
  "avoidance": "What to avoid or not mention when answering"
}

Return ONLY a valid JSON array with 6 objects. No markdown, no extra text. Start with [ and end with ].`
            }
          ]
        })
      });

      const data = await response.json();
      const content = data.content[0].text;
      
      const jsonMatch = content.match(/\[[\s\S]*\]/);
      if (!jsonMatch) {
        throw new Error('Invalid response format');
      }
      
      const parsedQuestions = JSON.parse(jsonMatch[0]);
      setQuestions(parsedQuestions);
      setExpandedCards({ 0: true });
    } catch (error) {
      console.error('Error generating questions:', error);
      alert('Error generating interview questions. Please try again.');
    } finally {
      setLoading(false);
    }
  };

  const resetForm = () => {
    setQuestions([]);
    setJobRole('');
    setExperienceLevel('Junior');
    setExpandedCards({});
    setActiveTab(null);
  };

  return (
    <div className="min-h-screen bg-slate-950 relative overflow-hidden">
      <div className="absolute inset-0 overflow-hidden pointer-events-none">
        <div className="absolute top-0 left-1/4 w-96 h-96 bg-cyan-500/20 rounded-full mix-blend-screen filter blur-3xl"></div>
        <div className="absolute bottom-0 right-1/4 w-96 h-96 bg-indigo-500/20 rounded-full mix-blend-screen filter blur-3xl"></div>
        <div className="absolute top-1/3 right-0 w-80 h-80 bg-purple-500/10 rounded-full mix-blend-screen filter blur-3xl"></div>
      </div>

      <div className="absolute inset-0 opacity-5 pointer-events-none" style={{
        backgroundImage: 'linear-gradient(0deg, transparent 24%, rgba(255,255,255,.05) 25%, rgba(255,255,255,.05) 26%, transparent 27%, transparent 74%, rgba(255,255,255,.05) 75%, rgba(255,255,255,.05) 76%, transparent 77%, transparent), linear-gradient(90deg, transparent 24%, rgba(255,255,255,.05) 25%, rgba(255,255,255,.05) 26%, transparent 27%, transparent 74%, rgba(255,255,255,.05) 75%, rgba(255,255,255,.05) 76%, transparent 77%, transparent)',
        backgroundSize: '50px 50px'
      }}></div>

      <div className="relative z-10">
        <header className="sticky top-0 z-50 backdrop-blur-xl bg-slate-950/50 border-b border-white/5">
          <div className="max-w-7xl mx-auto px-6 py-6">
            <div className="flex items-center justify-between">
              <div className="flex items-center gap-4">
                <div className="relative w-12 h-12 rounded-2xl bg-gradient-to-br from-cyan-400 to-indigo-600 p-0.5">
                  <div className="w-full h-full rounded-2xl bg-slate-950 flex items-center justify-center">
                    <Sparkles className="w-6 h-6 text-cyan-300" />
                  </div>
                </div>
                <div>
                  <h1 className="text-2xl font-light text-white tracking-tight">
                    Interview Coach<span className="font-semibold text-cyan-400"> AI</span>
                  </h1>
                  <p className="text-xs text-white/50 mt-0.5 font-light">Prepare with precision</p>
                </div>
              </div>
              {questions.length > 0 && (
                <div className="px-3 py-1.5 rounded-full bg-white/5 border border-white/10">
                  <p className="text-xs text-white/70 font-light">{questions.length} Questions Ready</p>
                </div>
              )}
            </div>
          </div>
        </header>

        <main className="max-w-5xl mx-auto px-6 py-12">
          {questions.length === 0 ? (
            <div className="space-y-8">
              <div className="text-center mb-12">
                <h2 className="text-4xl font-light text-white mb-3">
                  Master Your <span className="font-semibold bg-gradient-to-r from-cyan-400 to-indigo-400 bg-clip-text text-transparent">Interview Skills</span>
                </h2>
                <p className="text-white/60 font-light text-lg">Get AI-powered questions and expert feedback tailored to your role</p>
              </div>

              <div className="grid md:grid-cols-2 gap-6">
                <div className="relative group">
                  <label className="block text-sm font-light text-white/80 mb-4 flex items-center gap-2">
                    <Target className="w-4 h-4 text-cyan-400/70" />
                    <span>Position</span>
                  </label>
                  <input
                    type="text"
                    value={jobRole}
                    onChange={(e) => setJobRole(e.target.value)}
                    onKeyPress={(e) => e.key === 'Enter' && generateQuestions()}
                    placeholder="Software Engineer"
                    list="jobRoles"
                    className="w-full px-6 py-4 rounded-2xl backdrop-blur-xl bg-white/5 border border-white/10 text-white placeholder-white/30 focus:outline-none focus:border-cyan-400/50 focus:bg-white/10 transition-all duration-300 font-light"
                  />
                  <datalist id="jobRoles">
                    {jobRoleSuggestions.map((role) => (
                      <option key={role} value={role} />
                    ))}
                  </datalist>
                </div>

                <div className="relative group">
                  <label className="block text-sm font-light text-white/80 mb-4 flex items-center gap-2">
                    <Award className="w-4 h-4 text-indigo-400/70" />
                    <span>Experience</span>
                  </label>
                  <select
                    value={experienceLevel}
                    onChange={(e) => setExperienceLevel(e.target.value)}
                    className="w-full px-6 py-4 rounded-2xl backdrop-blur-xl bg-white/5 border border-white/10 text-white focus:outline-none focus:border-indigo-400/50 focus:bg-white/10 transition-all duration-300 appearance-none cursor-pointer font-light"
                  >
                    <option value="Fresher" className="bg-slate-900">Fresher</option>
                    <option value="Intern" className="bg-slate-900">Intern</option>
                    <option value="Junior" className="bg-slate-900">Junior</option>
                  </select>
                  <ChevronDown className="absolute right-6 top-12 w-4 h-4 text-white/40 pointer-events-none" />
                </div>
              </div>

              <div className="flex justify-center pt-4">
                <button
                  onClick={generateQuestions}
                  disabled={loading || !jobRole.trim()}
                  className="relative group px-8 py-4 font-light text-white rounded-2xl backdrop-blur-xl bg-gradient-to-r from-cyan-500/20 to-indigo-500/20 border border-cyan-400/30 hover:border-cyan-400/60 disabled:opacity-40 disabled:cursor-not-allowed transform transition-all duration-300 hover:scale-105 active:scale-95 flex items-center gap-3 hover:from-cyan-500/30 hover:to-indigo-500/30"
                >
                  <Send className="w-5 h-5" />
                  <span>{loading ? 'Generating...' : 'Generate Questions'}</span>
                </button>
              </div>
            </div>
          ) : (
            <div className="space-y-6 animate-in fade-in duration-500">
              <div className="flex items-center justify-between mb-8">
                <div>
                  <h2 className="text-3xl font-light text-white mb-2">
                    Your Interview <span className="font-semibold text-cyan-400">Questions</span>
                  </h2>
                  <p className="text-white/60 font-light text-sm">{jobRole} • {experienceLevel} Level</p>
                </div>
              </div>

              {questions.map((item, index) => (
                <div
                  key={index}
                  className="group relative backdrop-blur-xl bg-gradient-to-br from-white/5 to-white/[0.02] border border-white/10 rounded-3xl overflow-hidden hover:border-cyan-400/30 transition-all duration-500"
                >
                  <button
                    onClick={() => toggleCard(index)}
                    className="relative w-full px-8 py-6 flex items-start justify-between gap-6 hover:bg-white/[0.03] transition-colors duration-300 group/btn"
                  >
                    <div className="flex items-start gap-5 flex-1 text-left">
                      <div className="flex-shrink-0 mt-1">
                        <div className="flex items-center justify-center w-10 h-10 rounded-2xl bg-gradient-to-br from-cyan-400/20 to-indigo-500/20 border border-cyan-400/30 text-cyan-300 font-light text-sm group-hover/btn:from-cyan-400/40 group-hover/btn:to-indigo-500/40 transition-all duration-300">
                          {index + 1}
                        </div>
                      </div>
                      <div className="flex-1">
                        <p className="text-white font-light text-lg leading-relaxed group-hover/btn:text-cyan-100 transition-colors duration-300">
                          {item.question}
                        </p>
                      </div>
                    </div>
                    <ChevronDown
                      className={`w-5 h-5 text-white/40 flex-shrink-0 transition-all duration-300 group-hover/btn:text-cyan-400/70 ${
                        expandedCards[index] ? 'rotate-180' : ''
                      }`}
                    />
                  </button>

                  {expandedCards[index] && (
                    <div className="relative border-t border-white/10 px-8 py-8 space-y-8 animate-in fade-in slide-in-from-top-2 duration-300 bg-gradient-to-b from-white/[0.02] to-transparent">
                      <div className="flex gap-3 border-b border-white/10 pb-4">
                        {['answer', 'keyPoints', 'tips', 'avoid'].map((tab) => (
                          <button
                            key={tab}
                            onClick={() => setActiveTab(activeTab === tab ? null : tab)}
                            className={`px-4 py-2 rounded-xl text-sm font-light transition-all duration-300 ${
                              activeTab === tab
                                ? 'bg-cyan-500/20 text-cyan-300 border border-cyan-400/50'
                                : 'text-white/60 hover:text-white/80 border border-transparent'
                            }`}
                          >
                            {tab === 'answer' && 'Answer'}
                            {tab === 'keyPoints' && 'Key Points'}
                            {tab === 'tips' && 'Tips'}
                            {tab === 'avoid' && 'Avoid'}
                          </button>
                        ))}
                      </div>

                      <div className="space-y-6">
                        <div className={`space-y-3 transition-all duration-300 ${activeTab && activeTab !== 'answer' ? 'hidden' : ''}`}>
                          <div className="flex items-center gap-3">
                            <div className="w-2 h-2 rounded-full bg-gradient-to-r from-cyan-400 to-cyan-300"></div>
                            <h4 className="text-sm font-light text-cyan-300/90">Sample Answer</h4>
                          </div>
                          <p className="text-white/80 leading-relaxed text-sm font-light ml-5 bg-white/5 rounded-2xl p-4 border border-white/5">
                            {item.sampleAnswer}
                          </p>
                        </div>

                        <div className={`space-y-3 transition-all duration-300 ${activeTab && activeTab !== 'keyPoints' ? 'hidden' : ''}`}>
                          <div className="flex items-center gap-3">
                            <div className="w-2 h-2 rounded-full bg-gradient-to-r from-indigo-400 to-indigo-300"></div>
                            <h4 className="text-sm font-light text-indigo-300/90">Key Points</h4>
                          </div>
                          <div className="ml-5 grid gap-3">
                            {item.keyPoints.map((point, idx) => (
                              <div key={idx} className="flex items-start gap-3 text-white/80 text-sm font-light bg-white/5 rounded-xl p-3 border border-white/5 hover:border-indigo-400/20 transition-colors duration-300">
                                <span className="text-indigo-400/70 mt-0.5">▸</span>
                                <span>{point}</span>
                              </div>
                            ))}
                          </div>
                        </div>

                        <div className={`space-y-3 transition-all duration-300 ${activeTab && activeTab !== 'tips' ? 'hidden' : ''}`}>
                          <div className="flex items-center gap-3">
                            <div className="w-2 h-2 rounded-full bg-gradient-to-r from-green-400 to-green-300"></div>
                            <h4 className="text-sm font-light text-green-300/90">Confidence Tips</h4>
                          </div>
                          <p className="text-white/80 text-sm font-light ml-5 bg-white/5 rounded-2xl p-4 border border-white/5">
                            {item.tips}
                          </p>
                        </div>

                        <div className={`space-y-3 transition-all duration-300 ${activeTab && activeTab !== 'avoid' ? 'hidden' : ''}`}>
                          <div className="flex items-center gap-3">
                            <div className="w-2 h-2 rounded-full bg-gradient-to-r from-orange-400 to-orange-300"></div>
                            <h4 className="text-sm font-light text-orange-300/90">What to Avoid</h4>
                          </div>
                          <p className="text-white/80 text-sm font-light ml-5 bg-white/5 rounded-2xl p-4 border border-white/5">
                            {item.avoidance}
                          </p>
                        </div>
                      </div>
                    </div>
                  )}
                </div>
              ))}

              <div className="flex justify-center gap-4 pt-8">
                <button
                  onClick={resetForm}
                  className="px-6 py-3 text-white/80 hover:text-white font-light rounded-2xl backdrop-blur-xl bg-white/5 border border-white/10 hover:border-white/20 transition-all duration-300 flex items-center gap-2 hover:bg-white/10"
                >
                  <RotateCcw className="w-4 h-4" />
                  New Prep
                </button>
              </div>
            </div>
          )}
        </main>

        <footer className="border-t border-white/5 backdrop-blur-xl bg-slate-950/30 mt-16">
          <div className="max-w-5xl mx-auto px-6 py-8 text-center">
            <p className="text-white/40 text-xs font-light tracking-wide">
              © 2024 Interview Coach AI
            </p>
          </div>
        </footer>
      </div>
    </div>
  );
}

const root = ReactDOM.createRoot(document.getElementById('root'));
root.render(<InterviewCoach />);
    </script>
</body>
</html>
